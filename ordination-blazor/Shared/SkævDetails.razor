@namespace ordinationsapp.Shared
@inherits LayoutComponentBase

@using ordinationsapp.Data;
@using shared.Model;

@if (skæv == null)
{
    <p><em>Loader Daglig Skæv ordination...</em></p>
}
else
{
        <h3 class="details-title">Ordinationsdetaljer</h3>

        <div class="details-row">
            <span class="details-label">Type:</span>
            <span class="details-value">Daglig Skæv</span>
        </div>

        <div class="details-row">
            <span class="details-label">Startdato:</span>
            <span class="details-value">@skæv.startDen</span>
        </div>

        <div class="details-row">
            <span class="details-label">Slutdato:</span>
            <span class="details-value">@skæv.slutDen</span>
        </div>

        <div class="details-row">
            <span class="details-label">Lægemiddel:</span>
            <span class="details-value">@skæv.laegemiddel</span>
        </div>

        <div class="details-row">
            <span class="details-label">Døgndosis:</span>
            <span class="details-value">@skæv.doegnDosis()</span>
        </div>

        <div class="details-row">
            <span class="details-label">Samlet dosis:</span>
            <span class="details-value">@skæv.samletDosis()</span>
        </div>

        <h4 class="details-subtitle">Doser</h4>

        <div class="dose-list">
            @foreach (var dosis in skæv.doser)
            {
                <div class="dose-item">
                    <span class="dose-time">@dosis.tid.ToString("HH.mm")</span>
                    <span class="dose-amount">@dosis.antal</span>
                </div>
            }
        </div>
}

@code {
    [Parameter]
    public DagligSkæv? skæv { get; set; }
}